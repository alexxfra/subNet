<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubnetCalcActivity">

    <LinearLayout
        android:id="@+id/subnetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleCalc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="@string/ip4Address" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ipSubnetCalc"
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/octet1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:baselineAligned="false"
                android:ems="5"
                android:hint="@string/ipPart1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tvSubnetCalcIp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:text="@string/dot"
                android:visibility="visible" />

            <EditText
                android:id="@+id/octet2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:baselineAligned="false"
                android:ems="5"
                android:hint="@string/ipPart2"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tvSubnetCalcIp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:text="@string/dot" />

            <EditText
                android:id="@+id/octet3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:baselineAligned="false"
                android:ems="5"
                android:hint="@string/ipPart3"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tvSubnetCalcIp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:text="@string/dot" />

            <EditText
                android:id="@+id/octet4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:baselineAligned="false"
                android:ems="10"
                android:hint="@string/ipPart4"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/tvSubnetCalcIp4"
                android:layout_width="5sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:text="@string/slash" />

            <EditText
                android:id="@+id/prefix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:baselineAligned="false"
                android:ems="1"
                android:hint="@string/ipPart5"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="2" />
        </LinearLayout>

        <Button
            android:id="@+id/subnetCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/outputGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29" />

    <TextView
        android:id="@+id/ipSpecs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/outputGuideline" />

    <TextView
        android:id="@+id/ipSpecs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipSpecs1" />

    <TextView
        android:id="@+id/decimalOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ipSpecs1"
        app:layout_constraintTop_toTopOf="@+id/outputGuideline" />

    <TextView
        android:id="@+id/bitOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ipSpecs2"
        app:layout_constraintTop_toBottomOf="@+id/decimalOutput" />

</androidx.constraintlayout.widget.ConstraintLayout>